{
  "name": "@fresh-ui/preact",
  "version": "0.0.1-alpha-1",
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "test": "deno test -A --parallel src/*"
  },
  "exclude": ["**/tmp/*", "*/tests_OLD/**"],
  "publish": {
    "include": [
      "src/**",
      "deno.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": ["**/*_test.*", "src/__OLD/**", "*.todo"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.225.3/",
    "@fresh-ui/tailwind": "../../tools/tailwind/mod.ts",
    "preact": "npm:preact@^10.22.0"
  }
}
